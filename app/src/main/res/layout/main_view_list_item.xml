<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/main_view_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_toLeftOf="@id/main_view_list_icon"
            android:layout_toStartOf="@id/main_view_list_icon"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:text="应用名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_view_subtitle"
            android:text="com.example.包名"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_toStartOf="@id/main_view_list_icon"
            android:layout_toLeftOf="@id/main_view_list_icon"
            android:layout_below="@id/main_view_title"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_view_version"
            android:text="10.20.3"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_toStartOf="@id/main_view_list_icon"
            android:layout_toLeftOf="@id/main_view_list_icon"
            android:layout_below="@id/main_view_subtitle"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/main_view_list_icon"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>