<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/main_activity_top_bar"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/main_view_bar_char"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?colorPrimary"
                        android:minHeight="?actionBarSize"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:title="@string/app_name"
                        tools:layout_editor_absoluteX="0dp" />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/constraint_inner_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_network_flow_digit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"

                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="112.3"
                            android:textSize="@dimen/recycler_item_topbar_text_size"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tx_today_use"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/tx_network_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="MB"
                            android:textSize="@dimen/recycler_item_topbar_text_size_flow"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/tx_network_flow_digit"
                            app:layout_constraintLeft_toRightOf="@id/tx_network_flow_digit"
                            app:layout_constraintStart_toEndOf="@+id/tx_network_flow_digit" />

                        <TextView
                            android:id="@+id/tx_today_use"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="今日已使用流量"
                            android:textSize="@dimen/recycler_item_topbar_text_size_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tx_network_flow_digit" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/main_view_bar_char"
                    android:padding="18dp"
                    android:layout_height="260dp"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/main_view_recycler_cardview"
                    app:layout_constraintTop_toBottomOf="@id/main_activity_top_bar">


                </com.github.mikephil.charting.charts.PieChart>
                <android.support.v7.widget.CardView
                    android:id="@+id/main_view_recycler_cardview"
                    android:padding="18dp"
                    android:elevation="25dp"
                    app:cardCornerRadius="@dimen/public_card_corner_radius"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    app:layout_constraintTop_toBottomOf="@id/main_view_bar_char"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.618"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/main_activity_app_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:scrollbars="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        >

                    </android.support.v7.widget.RecyclerView>

                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>

