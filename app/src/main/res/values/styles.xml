    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/ToolbarPopupTheme</item>
    </style>
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">#880000</item>
        <item name="android:textColor">#880088</item>
    </style>

    <style name="public_view_ripple_border_style"></style>

    <style name="public_view_ripple_borderless_style"></style>


    <style name="note_edit_bottom_dailog_item_left_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="note_edit_bottom_dailog_item_right_style" >
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#0f0f0f</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
